<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="album_detail" type="com.example.vinyls.model.Album"/>
    </data>

    <RelativeLayout
        android:id="@+id/album_track_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button"
        android:clickable="true"
        android:focusable="auto">

        <ImageView
            android:id="@+id/album_track_form_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:background="@xml/circle"
            android:contentDescription="@string/cover_album_form_desc" />

        <TextView
            android:id="@+id/album_track_form_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/album_track_form_image"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</layout>